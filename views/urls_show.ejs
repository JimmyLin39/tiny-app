<!-- list full url by short form link -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tiny App</title>
</head>
<body>
  <!-- Add your EJS code here -->
  <header>
    <% include ./partials/_header %>
  </header>

  <main>
    <% for (var shortForm in urls){ %>
      <!-- match the respond id with urlDatabase -->
      <% if ( shortURL === shortForm) { %>
        <h1>ShortURL: <%= shortForm %></h1>
        <!-- Add an Update button that will update longURL -->
        <form action="/urls/<%= shortForm %>" method="POST">
          <input
                 type="text"
                 name="longURL"
                 value="<%= urls[shortForm] %>"
                 style="width: 200px">
          <input type="submit" value="Update">
        </form>
      <% } %>
    <% } %>
  </main>

</body>
</html>