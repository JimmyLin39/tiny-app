<%# list full url by short form link %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tiny App</title>
</head>
<body>

  <header>
    <% include ./partials/_header %>
  </header>

  <main>
    <%# Display shortURL %>
    <% if (urls) {%>
      <h1>ShortURL: <a href="/u/<%= shortURL %>" id="shortURL"><%= shortURL %></a></h1>
      <button onclick="copyShortURL()">Copy Short Link</button>
      <%# Add an Update button that will update longURL %>
      <form action="/urls/<%= shortURL %>" method="POST">
        <input
          type="text"
          name="longURL"
          value="<%= urls.longURL %>"
          style="width: 200px">
        <input type="submit" value="Update">
      </form>
    <% } else{ %>
      <h1>Given ShortURL: <%= shortURL %> NOT Exist</h1>
    <%}%>
  </main>
  <script>
  function copyShortURL() {
    var copyURL = 'http://localhost:8080/u/<%= shortURL %>';
    // copyURL.select();
    document.execCommand("Copy");
    alert("Copied the URL: " + copyURL);
  }
  </script>
</body>
</html>