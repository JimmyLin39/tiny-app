<!-- a basic form page that can submit URLs to be shortened -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Tiny App</title>
  </head>
  <body style="font-size:20px; padding:50px;">
    <header class="header clearfix">
      <% include partials/_header %>
    </header>
    <form action="/urls" method="POST" style="margin:150px;">
      <label for="longURL">Enter a URL:</label>
      <input id="longURL" type="text" name="longURL" placeholder="http://" style="width: 300px">
      <input type="submit" value="Submit">
    </form>
  </body>
</html>