<!-- A registation page that includes a form with an email and password field -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Tiny App</title>
    <link rel="icon" href="/icon.png">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <!-- Custom styles for this template -->
    <link href="/narrow-jumbotron.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>CREATE A FREE ACCOUNT</h1>
        <form action="/register" class="form-signin" method="POST">
          <label for="inputEmail" class="sr-only">Email address</label>
          <input id="email" type="email" class="form-control" name="email" placeholder="Email address">
          <label for="inputPassword" class="sr-only">Password</label>
          <input id="password" type="password" class="form-control" name="password" placeholder="Password">
          <!-- a submit button POST info to /register -->
          <input type="submit" class="btn btn-primary btn-block" value="CREATE ACCOUNT">
        </form>
      </div>
    </div>
  </body>
</html>